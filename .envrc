# direnv configuration for TYPO3 contexts extension development
# This file integrates with direnv (https://direnv.net/) for automatic environment setup

# Check if DDEV is available
if command -v ddev &> /dev/null; then
    # Export DDEV environment variables
    export DDEV_PROJECT_NAME="contexts"
    export DDEV_PROJECT_TYPE="php"

    # Convenience aliases (if using bash)
    export TYPO3_V12_URL="https://v12.contexts.ddev.site"
    export TYPO3_V13_URL="https://v13.contexts.ddev.site"
    export DOCS_URL="https://docs.contexts.ddev.site"
fi

# PHP development settings
export COMPOSER_MEMORY_LIMIT=-1
export XDEBUG_MODE=off

# Notify user
echo "TYPO3 contexts extension development environment loaded"
echo "  - Start DDEV: ddev start"
echo "  - Install TYPO3: ddev install-all"
echo "  - Run tests: ddev run-tests all"
echo "  - Lint code: ddev lint"
