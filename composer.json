{
    "name": "netresearch/contexts",
    "type": "typo3-cms-extension",
    "description": "Multi-channel content visibility for TYPO3 - by Netresearch",
    "homepage": "https://github.com/netresearch/t3x-contexts/",
    "license": [
        "AGPL-3.0-or-later"
    ],
    "keywords": [
        "TYPO3",
        "extension",
        "contexts"
    ],
    "support": {
        "issues": "https://github.com/netresearch/t3x-contexts/issues"
    },
    "authors": [
        {
            "name": "Andre HÃ¤hnel, Christian Opitz, Christian Weiske, Marian Pollzien, Rico Sonntag, Benni Mack",
            "email": "typo3@netresearch.de",
            "role": "Developer",
            "homepage": "https://www.netresearch.de"
        }
    ],
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "phpro/grumphp": true,
            "a9f/fractor-extension-installer": true,
            "infection/extension-installer": true
        },
        "audit": {
            "abandoned": "ignore",
            "block-insecure": false
        },
        "sort-packages": true
    },
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "typo3/cms-backend": "^12.4 || ^13.4",
        "typo3/cms-core": "^12.4 || ^13.4",
        "typo3/cms-extbase": "^12.4 || ^13.4",
        "typo3/cms-extensionmanager": "^12.4 || ^13.4",
        "typo3/cms-frontend": "^12.4 || ^13.4"
    },
    "require-dev": {
        "a9f/typo3-fractor": "^0.5",
        "friendsofphp/php-cs-fixer": "^3.64",
        "infection/infection": "*",
        "nikic/php-fuzzer": "^0.0.11",
        "phpro/grumphp": "^2.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^10.5 || ^11.0 || ^12.0",
        "rector/rector": "^2.0",
        "squizlabs/php_codesniffer": "^4.0",
        "ssch/typo3-rector": "^3.0",
        "typo3/testing-framework": "^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "Netresearch\\Contexts\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netresearch\\Contexts\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "test": [
            "@test:unit"
        ],
        "test:unit": "phpunit -c Build/phpunit/UnitTests.xml",
        "test:functional": "phpunit -c Build/phpunit/FunctionalTests.xml",
        "test:coverage": "phpunit -c Build/phpunit/UnitTests.xml --coverage-html .Build/coverage/html --coverage-clover .Build/coverage/clover.xml",
        "test:mutation": "infection --threads=4",
        "test:fuzz": "@php -r \"echo 'Run individual fuzz tests with: vendor/bin/php-fuzzer fuzz Tests/Fuzz/<target>.php';\"",
        "lint": "php-cs-fixer fix --config=Build/php-cs-fixer.php --dry-run --diff",
        "lint:fix": "php-cs-fixer fix --config=Build/php-cs-fixer.php",
        "analyze": "phpstan analyse -c Build/phpstan.neon --no-progress"
    },
    "scripts-descriptions": {
        "test": "Run unit tests",
        "test:unit": "Run unit tests only",
        "test:functional": "Run functional tests (requires database)",
        "test:coverage": "Run unit tests with code coverage",
        "test:mutation": "Run mutation testing with Infection",
        "test:fuzz": "Show instructions for running fuzz tests",
        "lint": "Check code style",
        "lint:fix": "Fix code style",
        "analyze": "Run static analysis"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        },
        "typo3/cms": {
            "extension-key": "contexts"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.org"
        }
    }
}
