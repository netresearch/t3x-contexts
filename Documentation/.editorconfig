# EditorConfig for TYPO3 documentation
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.rst]
indent_size = 3

[*.{yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
