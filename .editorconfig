# EditorConfig - https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[*.{json,neon}]
indent_size = 4

[*.{rst,md}]
trim_trailing_whitespace = false

[*.rst]
indent_size = 3

[*.xml]
indent_size = 4

[*.sql]
indent_size = 2

[Makefile]
indent_style = tab
