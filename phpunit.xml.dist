<phpunit
    backupGlobals="false"
    colors="true"
    verbose="true"
    strict="true"
    bootstrap="tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="Full Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">Classes/</directory>
        </whitelist>
    </filter>
</phpunit>
